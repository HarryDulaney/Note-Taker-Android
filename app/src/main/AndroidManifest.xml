<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ethical_techniques.notemaker">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="androidx.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_notebook_edit_outline_black_36dp"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_notebook_edit_outline_black_48dp"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
        tools:ignore="GoogleAppIndexingWarning">
        <!-- Login Activity -->
        <activity
            android:name=".auth.UserLoginActivity"
            android:label="@string/title_activity_user_login"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- The List Activity -->
        <activity
            android:name=".ListActivity"
            android:label="@string/title_activity_list" /> <!-- The Settings (Preferences) Activity -->
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".ListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ListActivity" />
        </activity> <!-- The Edit/New Note Activity -->
        <activity
            android:name=".NoteActivity"
            android:label="@string/title_note_activity"
            android:parentActivityName=".ListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ListActivity" />
        </activity> <!-- Category List Activity -->
        <activity
            android:name=".CategoryListActivity"
            android:label="Categories"
            android:parentActivityName=".ListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ListActivity" />
        </activity> <!-- The New/Edit Category Activity -->
        <activity
            android:name=".CreateCategoryActivity"
            android:label="New Category"
            android:parentActivityName=".CategoryListActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".CategoryListActivity" />
        </activity>
    </application>

</manifest>