<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_nav_bar"
    android:fitsSystemWindows="true"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <!--    <LinearLayout-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginTop="@dimen/extraLrgMargin"-->
    <!--        android:layoutDirection="ltr">-->

    <!--        <ImageView-->
    <!--            android:id="@+id/nav_header_img_view"-->
    <!--            android:layout_width="wrap_content"-->
    <!--            android:layout_height="wrap_content"-->
    <!--            android:layout_marginEnd="@dimen/smallMargin"-->
    <!--            android:contentDescription="@string/the_main_image_displayed_in_the_navigation_drawer"-->
    <!--            android:src="@drawable/ic_notebook_edit_outline_black_36dp"-->
    <!--            tools:targetApi="n" />-->
    <View
        android:id="@+id/divider_topHeaderNavView"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/colorBackground"
        app:layout_anchorGravity="center" />

    <TextView
        android:id="@+id/textView_drawer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/smallMargin"
        android:layout_marginTop="@dimen/largeMargin"
        android:drawableStart="@drawable/ic_notebook_edit_outline_black_48dp"
        android:text="@string/nav_header_title"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="30sp" />
    <!--    </LinearLayout>-->

    <TextView
        android:id="@+id/textView_title_drawer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/smallMargin"
        android:text="@string/nav_header_subtitle"
        android:textAlignment="viewEnd" />

    <View
        android:id="@+id/divider_navHeaderBottom"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider"
        app:layout_anchorGravity="center" />

    <LinearLayout
        android:id="@+id/navDrawerUserProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@android:dimen/notification_large_icon_width"
            android:layout_height="@android:dimen/notification_large_icon_height"
            android:id="@+id/userPic"
            android:layout_marginTop="@dimen/smallMargin"
            android:contentDescription="@string/avatar_icon"
            android:src="@drawable/ic_account_circle_black_48dp" />

        <TextView
            android:id="@+id/textViewUserNameDrawer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/smallMargin"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="@dimen/largeMargin"
            android:text="@string/signed_out"
            android:textAlignment="gravity"
            android:textSize="14sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <View
        android:id="@+id/divider_navHeader"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/colorBackground"
        app:layout_anchorGravity="center" />
</LinearLayout>