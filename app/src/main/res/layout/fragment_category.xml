<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/categoryRecycleFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/extraSmMargin"
    android:layout_marginTop="@dimen/extraSmMargin"
    android:layout_marginEnd="@dimen/extraSmMargin"
    android:layout_marginBottom="@dimen/extraSmMargin"
    android:background="@color/hgdivDarkItems">

    <TextView
        android:id="@+id/categoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/smallMargin"
        android:maxEms="14"
        android:text="@string/category_name"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="20sp" />

    <!-- Delete Button-->
    <ImageButton
        android:id="@+id/buttonDeleteCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/extraSmMargin"
        android:adjustViewBounds="false"
        android:background="@color/colorPrimaryNavBar"
        android:contentDescription="@string/delete_button_for_this_note"
        android:cropToPadding="true"
        android:focusable="false"
        android:padding="@dimen/extraSmMargin"
        android:scaleType="centerInside"
        android:src="@drawable/ic_delete_forever_black_36dp"
        android:visibility="visible" />


</RelativeLayout>
